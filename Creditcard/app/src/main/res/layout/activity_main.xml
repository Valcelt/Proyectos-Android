<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/titulo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="left"
            android:text="Informacion de la tarjeta de credito">

        </TextView>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_marginLeft="270dp"
            android:text="Guardar"
            >

        </Button>

     </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <EditText

            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/txtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Apellido"
            />

        <EditText
            android:id="@+id/txtNumero_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLength="16"
            android:inputType="number"
            android:hint="Numero de Tarjeta"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="220dp"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtMes"
            android:maxLength="2"
            android:layout_width="120dp"
            android:hint="Mes"
            android:inputType="number"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/txtAño"
            android:layout_width="120dp"
            android:layout_marginLeft="120dp"
            android:gravity="center"
            android:maxLength="4"
            android:inputType="number"
            android:hint="Año"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/txtCodigo"
            android:maxLength="3"
            android:inputType="number"
            android:layout_width="130dp"
            android:layout_marginLeft="250dp"
            android:gravity="center"
            android:hint="Codigo"
            android:layout_height="wrap_content">

        </EditText>


    </RelativeLayout>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Dirección"
        >

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="310dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Calle y número">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="370dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad">
        </EditText>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="430dp"

        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/txtEstado"
            android:layout_width="170dp"
            android:hint="Estado"
            android:layout_height="wrap_content">

        </EditText>

        <EditText
            android:id="@+id/txtCodigo_postal"
            android:layout_width="200dp"
            android:layout_marginLeft="190dp"
            android:gravity="center"
            android:hint="Codigo de postal"
            android:layout_height="wrap_content">

        </EditText>




    </RelativeLayout>




</RelativeLayout>